{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "arrow-spacing": [
      "error", 
      { 
        "before": true, 
        "after": true
      }
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-mixed-spaces-and-tabs": "warn",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "no-unused-vars": [
      "error",
      { 
        "argsIgnorePattern": "request|response|next|__"
      }
    ],
    "no-whitespace-before-property": "error",
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "object-property-newline": [
      "error",
      { 
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "space-before-blocks": [
      "error", 
      "always"
    ],
    "space-before-function-paren": [
      "error", 
      "always"
    ],
    "space-infix-ops": "error",
    "space-unary-ops": "error"
  }
}
